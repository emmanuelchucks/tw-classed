{
  "name": "@tw-classed/core",
  "version": "1.4.0-canary.1",
  "description": "A Stitches & Styled-Components inspired library to create reusable Tailwind react components",
  "sideEffects": false,
  "main": "dist/index.cjs",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "module": "./dist/index.esm.js",
      "require": "./dist/index.cjs"
    },
    "./memoize": {
      "import": "./dist/memoize.mjs",
      "module": "./dist/memoize.esm.js",
      "require": "./dist/memoize.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "pnpm run build --watch",
    "build": "bunchee --target es2018",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "cd ../../ && turbo run build test --filter=@tw-classed/core"
  },
  "keywords": [],
  "author": "Sanna Jammeh",
  "license": "MIT",
  "homepage": "https://github.com/sannajammeh/tw-classed",
  "repository": {
    "type": "git",
    "url": "https://github.com/sannajammeh/tw-classed"
  },
  "devDependencies": {
    "@vitest/ui": "^0.25.1",
    "bunchee": "^2.1.6",
    "c8": "^7.12.0",
    "typescript": "^4.8.4",
    "vite": "^3.2.3",
    "vite-plugin-dts": "^1.7.0",
    "vitest": "^0.25.1"
  }
}
